
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h1 class="text-center text-3xl font-extrabold"><%= t('sessions.new.sign_in') %></h1>

        <%- if false %>
          <p class="mt-2 text-center text-sm text-gray-600 hidden">
            Or
            <%= link_to t('sessions.new.create_account'), new_registration_path, class: 'font-medium text-green-600 hover:text-green-500' %>
          </p>
        <% end -%>
      </div>
      <%= form_with(url: session_path, html: { class: "space-y-6" }, data: { turbo: false }) do |f| %>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, value: params[:email],
                class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm' %>
          </div>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="mt-1">
            <%= f.password_field :password, autocomplete: "current-password", required: true,
                class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm' %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
          </div>

          <div class="text-sm">
            <%= link_to t('sessions.new.forgot_password'), new_password_path, class: 'font-medium text-sky-600 hover:text-sky-500' %>
          </div>
        </div>

        <div>
          <%= f.submit t('sessions.new.sign_in'), class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500' %>
        </div>
      <% end %>
    </div>
  </div>
