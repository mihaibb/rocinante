{
  "name": "app",
  "private": true,
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindplus/elements": "^1.0.4",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css:application": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "build:css:marketing": "npx @tailwindcss/cli -i ./app/assets/stylesheets/marketing.tailwind.css -o ./app/assets/builds/marketing.css --minify",
    "build:css": "npm-run-all --parallel \"build:css:* {@}\" --"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@rails/actiontext": "^8.0.200",
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11",
    "trix": "^2.1.15"
  }
}
